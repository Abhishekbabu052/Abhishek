    // small enhancement: smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        e.preventDefault(); const id=a.getAttribute('href'); if(id==='#') return;
        const el=document.querySelector(id); if(!el) return; el.scrollIntoView({behavior:'smooth', block:'start'});
      })
    })
  </script>
